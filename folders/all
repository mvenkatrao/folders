[root@ip-172-31-45-211 ~]# cat lessthan.sh
#!/bin/bash

echo "Enter first value : "

read a

echo "Enter second value : "

read b

if [ $a -eq $b ]

then
   echo "the statment become is true"
else

   echo "the statment become false"
fi

