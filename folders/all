if elif else

if condition
then 
  statement
  statement
elif condition
then 
   statement 
   statement
else
   statement
fi
#####################################
echo "Enter a number"
read a
echo "Enter a number"
read b
if [ $a -eq $b ]
then
echo "a value is equal to b value"
elif [ $a -gt $b ]
then
echo " $a is greater than $b"
else
echo $a is less than $b
fi   

