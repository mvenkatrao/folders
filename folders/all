---
 - name: arthamatic
   hosts: all
   gather_facts: yes
   become: yes
   vars:
    x: 1
    z: 2

   tasks:
     - name: perfoming arthamatic operators
       debug:
         msg:
         - "The value of arthamatic operator is {{x}}"
         - "The {{x}} + {{z}} = {{x+z}}"
         - "The {{x}} - {{z}} = {{x-z}}"
         - "The {{x}} * {{z}} = {{x*z}}"

